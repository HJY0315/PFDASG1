@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>OCBC</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="~/css/cards.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- GSAP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.0/gsap.min.js"></script>
    <style>
        body {
            font-size: 18px;
        }

        .container {
            background-color: white;
            color: black;
        }

        a, button, input {
            outline: 2px solid black;
        }

        p {
            line-height: 1.5;
        }

        .card-wrapper .card {
            aria-label ="Card activation form"
        }

            .card-wrapper .card .number {
                aria-label ="Card number"
            }

            .card-wrapper .card .expiry {
                aria-label ="Card expiry date"
            }

            .card-wrapper .card .name {
                aria-label ="Cardholder name"
            }

            .card-wrapper .card .button {
                aria-label ="Activate card"
            }

        .activated-cards {
            margin-bottom: 20px;
        }

            .activated-cards ul {
                list-style-type: none;
                padding: 0;
            }

            .activated-cards li {
                display: block;
                margin-bottom: 10px;
            }

        .transaction-history {
            margin-bottom: 20px;
        }

            .transaction-history table {
                width: 100%;
                border-collapse: collapse;
            }

            .transaction-history th,
            .transaction-history td {
                border: 1px solid #ccc;
                padding: 10px;
            }

            .transaction-history th {
                background-color: #f7f7f7;
            }
    </style>
    <script>
        const activatedCardsSection = document.querySelector(".activated-cards");
        const transactionHistorySection = document.querySelector(".transaction-history");

        // Fetch the user's activated cards
        fetch("/api/cards/activated")
            .then(response => response.json())
            .then(activatedCards => {
                // Populate the activated cards section
                activatedCardsSection.querySelector("ul").innerHTML = "";
                activatedCards.forEach(card => {
                    const li = document.createElement("li");
                    li.textContent = card.number;
                    activatedCardsSection.querySelector("ul").appendChild(li);
                });
            });

        // Fetch the user's transaction history
        fetch("/api/transactions/history")
            .then(response => response.json())
            .then(transactionHistory => {
                // Populate the transaction history section
                transactionHistorySection.querySelector("tbody").innerHTML = "";
                transactionHistory.forEach(transaction => {
                    const tr = document.createElement("tr");
                    const dateTd = document.createElement("td");
                    dateTd.textContent = transaction.date;
                    tr.appendChild(dateTd);

                    const vendorTd = document.createElement("td");
                    vendorTd.textContent = transaction.vendor;
                    tr.appendChild(vendorTd);

                    const amountTd = document.createElement("td");
                    amountTd.textContent = transaction.amount;
                    tr.appendChild(amountTd);

                    transactionHistorySection.querySelector("tbody").appendChild(tr);
                });
            });
    </script>
</head>
<body>
    <header>
        @await Html.PartialAsync("_navbar.cshtml")
    </header>
    <div class="container">
        <div class="mobile">
            <div class="content">
                <div class="cards">
                    <div class="card-wrapper">
                        <div class="card black">
                            <div class="logo">
                                <div class="circle red"></div>
                                <div class="circle yellow"></div>
                            </div>
                            <div class="details">
                                <div class="number">1234 5678 9876 5432</div>
                                <div class="bottom">
                                    <div class="name">JOHN WICK</div>
                                    <div class="expiry">04/24</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="transactions">
                    <div class="transaction">
                        <div class="image-wrapper">
                            <i class="fab fa-amazon"></i>
                        </div>
                        <div class="vendor-details">
                            <div class="title">Amazon</div>
                            <div class="description">Groceries</div>
                        </div>
                        <div class="transaction-details">
                            <div class="price">$28.8</div>
                            <div class="date">21.07.2020</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="activated-cards">
        <h1>Activated cards</h1>
        <ul class="list-group">
        </ul>
    </div>
    <div class="transaction-history">
        <h1>Transaction history</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Vendor</th>
                    <th> Amount

    <!-- Custom JavaScript -->
    <script>
        $(document).ready(function () {
            const timeline = gsap.timeline({ paused: true, reversed: true });
            const $card = $(".card-wrapper .card");
            const transitionSpeed = 0.5;

            timeline
                .to(".card-wrapper", transitionSpeed, { className: "+=active" }, 0)
                .to(".cards", transitionSpeed, { height: "140px", backgroundColor: "#f7f7f7" }, 0)
                .to(".card", transitionSpeed, { top: 10 }, 0)
                .to(".card:not(:first-child)", 0.1, { boxShadow: "none" }, 0)
                .to(".transactions", transitionSpeed, { top: "140px", opacity: 1 }, 0);

            $card.on("click", function () {
                if (timeline.reversed()) {
                    $(this).css("z-index", "2");
                    timeline.play();
                } else {
                    timeline.reverse();
                    timeline.eventCallback("onReverseComplete", () => {
                        $(this).css("z-index", "0");
                    });
                }
            });
        });
    </script>

</body>
</html>
